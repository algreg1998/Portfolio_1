<% provide(:title,"Home")%>
<html>
<head>
	<title><%=yield(:title)%></title>
</head>

<body id="page-top" class="index">

    
  <!-- Header -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                <%= image_tag("photo_256x256.jpg", alt: "",class:"img-responsive")%>
                    <img class="img-responsive" src="img/profile.png" alt="">
                    <div class="intro-text">
                        <span class="name">Algreg M. Mata</span>
                        <hr class="star-light">
                        <span class="skills">Web Developer - Foodie - Student</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Portfolio Grid Section -->
    <section id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Portfolio</h2>
                    <hr class="star-primary">
                </div>
            </div>
                <div class="col-sm-4 portfolio-item">
                    <%= link_to image_tag("Clinic.jpg", alt: "Melecio Barrige Information Clinic System",class:"img-responsive"),p1_path  %>
                  
                    <h3 align="center">Melecio Barriga Information Clinic System</h3>
                </div>
                <div class="col-sm-4 portfolio-item">
                    <%= link_to image_tag("16443211_1605772979439779_1067722742_n.png", alt: "Income Tax Return Generator",class:"img-responsive"),p2_path%>
                    <h3 align="center">Income Tax REturn Generator</h3>
                </div>
                <div class="col-sm-4 portfolio-item">
                    <%= link_to image_tag("IceCreamGame.jpg", alt: "Ice Cream Game",class:"img-responsive"),p3_path%>
                    <h3 align="center">Ice Cream Store</h3>
                </div>
               
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="success" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>About Me</h2>
                    <hr class="star-light">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-lg-offset-2">
                    <p></p>
                </div>
                <div class="col-lg-4">
                    <p>I am an ordinary student, who wishes to graduate as early as possible, to be able to find a job, for an early retirement (<%= link_to "read more...", {controller: "static_pages", action: "aboutme"}, class: "readM" %>)</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll hidden-sm hidden-xs hidden-lg hidden-md">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- jQuery -->
    <script src="vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="js/jqBootstrapValidation.js"></script>
    <script src="js/contact_me.js"></script>

    <!-- Theme JavaScript -->
    <script src="js/freelancer.min.js"></script>
 

</body>
</html>
<script>
     $( function() {
    $( "#progressbar" ).progressbar({
      value: 37
    });
  } );
</script>